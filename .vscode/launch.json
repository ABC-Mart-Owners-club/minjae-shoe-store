{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "kotlin",
            "request": "launch",
            "name": "Kotlin Main",
            "projectRoot": "${workspaceFolder}",
            "mainClass": "MainKt",
            "preLaunchTask": "build"
        },
        {
            "type": "kotlin",
            "request": "launch",
            "name": "Kotlin Test",
            "projectRoot": "${workspaceFolder}",
            "testClass": "com.example.MainTest",
            "preLaunchTask": "build",
            "testKind": "test",
            "vmArgs": [
                "-Dkotlin.test.junit5.enabled=true"
            ],
            "env": {
                "JAVA_HOME": "${env:JAVA_HOME}"
            }
        }
    ]
} 